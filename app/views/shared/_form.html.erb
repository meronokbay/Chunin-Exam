<%= form_with model: @url, class: 'd-flex gap-3 w-lg-50 mx-auto' do |form| %>
  <%= form.text_field :full_url,
    placeholder: 'Type or paste your link',
    "aria-label": 'Full link',
    class: 'form-control rounded-0 d-block px-4 py-2',
    required: true %>
  <%= form.submit 'Shorten', class: 'btn btn-primary rounded-0 px-4 py-2' %>
<% end %>